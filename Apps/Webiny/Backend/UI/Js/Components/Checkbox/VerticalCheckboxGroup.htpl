<div class={this.state.css}>
    <div class="form-group">
        <label class="control-label">{this.props.label}</label>

        <div class="row">
            <loop items={this.checkboxes}>
                <Checkbox grid={item.grid} label={item.label} valueLink={this.linkState(item.bind)} />
            </loop>
        </div>
    </div>
</div>