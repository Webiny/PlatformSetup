<div class="col-sm-offset-2 col-sm-10">
    <div class={{icheckbox_minimal: true, disabled: this.props.disabled, checked: checked}}>
        <input id={this.inputRef} type="checkbox"
               ref={this.inputRef}
               onChange={this.onChange}
               checked={checked} class="radio" />
    </div>
    <label for={this.inputRef} class="cb-label">{this.props.label}</label>
</div>

