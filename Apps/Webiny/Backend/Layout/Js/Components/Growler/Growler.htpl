<div id="growl" class="top-right growl">
    <div class="growl-notification"></div>
    <w-loop items={this.state.growls} as="growl">
        <w-growl growl={growl} on-remove={this.removeGrowl} ref={growl.id} />
    </w-loop>
    <w-if cond="Object.keys(this.state.growls).length > 1">
        <div class="growl-closer highlight ui-corner-all default" onClick={this.removeAll}>[ close all ]</div>
    </w-if>
</div>