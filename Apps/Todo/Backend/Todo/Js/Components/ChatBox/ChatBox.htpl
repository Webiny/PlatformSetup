<div class="component">
    <h3>ChatBox</h3>
    <w-form-inline name="form">
        <w-form-group>
            <w-input grid="8" ref="message" placeholder="Your message"/>

            <div class="col-sm-4">
                <button class="btn btn-success" type="submit" onClick={this.postMessage}>Post</button>
            </div>
        </w-form-group>

        <ul>
            <w-loop items={this.state.messages} as="msg">
                <li>
                    <span class="grey">{msg.time.getTime()} - </span>
                    <span>{msg.message}</span>
                </li>
            </w-loop>
        </ul>
    </w-form-inline>
</div>